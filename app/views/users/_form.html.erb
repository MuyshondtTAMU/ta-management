<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being created:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div>
      <div>
      <%= form.label :name, style: "display: block" %><br>
      <%= form.text_field :name %>
      </div><br>
      <div>
      <%= form.label :access_level, style: "display: block" %><br>
      <%= form.select :access_level, ["TA", "Professor","Hiring Manager","Coordinator"] %>
      </div><br>
      <div>
      <%= form.label :email_id, style: "display: block" %><br>
      <%= form.text_field :email_id %>
      </div><br>
      <div>
      <%= form.label :password, style: "display: block" %><br>
      <%= form.text_field :password ,id: "password"%>
      </div><br>
      <div>
      <%= form.label :confirm_password, style: "display: block" %><br>
      <%= form.text_field :confirm_password,id: "confirm_password" %>
      </div><br>
      <div>
      <%= form.submit "Create Account" , id:"sign_up_submit" %>
      </div>
    </div>
<% end %>
