<%= form_with(model: student) do |form| %>
  <% if student.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %><br>
    <%= form.text_field :name %>
  </div><br>

  <div>
    <%= form.label :email_id, style: "display: block" %><br>
    <%= form.text_field :email_id %>
  </div><br>

  <div>
    <%= form.label :uin, style: "display: block" %><br>
    <%= form.text_field :uin %>
  </div><br>

  <div>
    <%= form.label :do_you_have_a_campus_job? , style: "display: block" %><br>
    <%= form.select :employment_status, ["Yes", "No"] %>
  </div><br>

  <div>
    <%= form.label :are_you_an_undergrad_student?, style: "display: block" %><br>
    <%= form.select :is_undergrad, ["Yes", "No"] %>
  </div><br>

  <div>
    <%= form.label :courses_already_taken, style: "display: block" %><br>
    <%= form.select :courses_completed, ["102", "216", "Both", "None"] %>
  </div><br>

  <div>
    <%= form.label :resume, style: "display: block" %><br>
    <%= form.file_field :resume %>
  </div><br>

  <div>
    <%= form.label :transcript, style: "display: block" %><br>
    <%= form.file_field :transcript %>
  </div><br>

  <div>
    <%= form.submit "Submit Application" %>
  </div>
<% end %>
